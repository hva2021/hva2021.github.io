{
 

    "name": "Dino Run - HTML5 Game",
    "manifest_version": 3,
    "description": "Dino Run is a fun game to run and jump, other points you make faster than the dinosaurs will run. Now available on Chrome!",
    "offline_enabled": true,
    "version": "1.0.2",
    "icons": {
        "512": "icons/icon-512.png",
         "256": "icons/icon-256.png",
         "128": "icons/icon-128.png",
         "64": "icons/icon-64.png",
         "48": "icons/icon-48.png",
         "32": "icons/icon-32.png",
         "16": "icons/icon-16.png" 
    },
     "action": {
         "default_icon": {             
         "512": "icons/icon-512.png",
         "256": "icons/icon-256.png",
         "128": "icons/icon-128.png",
         "64": "icons/icon-64.png",
         "48": "icons/icon-48.png",
         "32": "icons/icon-32.png",
         "16": "icons/icon-16.png" 
        },
        "default_title": "Play Dino Run",   
        "default_popup": "load.html"  
      },
     "background": {
    "service_worker": "background.js"  
  }
}
